<% include partials/header %>
<div class="ui main text container">
  <div id="headTitle" class="ui huge header">Travel Blog</div>
  <div class="info"><h2>Create your own travel page by uploading your favourite travel destinations, images and travelstories</h2></div>
  <div class="ui top attached segment">
    <div class="ui divided items landpage">
      <% blogs.forEach(function(blog){ %>
          <div class="item">
            <div class="image">
              <img src="<%=blog.image%>">
            </div>
              <div class="content">
                <a class="header" href="/blogs/<%= blog._id %>"><%= blog.title %></a>
                <div class="meta">
                  <span><%= blog.created.toDateString() %></span>
                </div>
                <div class="Description">
                  <p><%- blog.body.substring(0, 100) %> ...</p>
                 </div>
                <div class="extra">
                 <a class="ui floated basic blue button" href="/blogs/<%= blog._id %>">Read more<i class="right chevron icon"></i></a>
             </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</div>
<% include partials/footer %>
